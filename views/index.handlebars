{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<div class="text-center">
  <div class="container">
    <div class="jumbotron">
      <!--<img src="assets/image/burger.png" class="img-fluid rounded burger-img mt-1">-->
      <h1 class="display-5 title">Eat-Da-Burger!</h1>
 </div>
      <panel>
        {{!added method, get, and action}}
        <form class="create-form" method="GET" action="/">
          <div class="form-group">
            <div class="row">
              <div class="col-md-12">
                {{!-- Add a burger --}}
                <p class="lead">Enter a burger name you want to eat</p>
                <form id="add-burger">
                  <div class="form-group mx-auto" style="width: 35%">
                    <textarea type="text" class="form-control form-control-md" name="bname" id="burger"></textarea>
                  </div>
                  <button type="submit" class="btn btn-danger">Add Your Burger</button>
                </form>
              </div>
            </div>
        </form>
      </panel>
    <div class="row">
      {{!-- Left Side for to-be-devoured burgers --}}
      <div class="col-sm-6">
        <div class="panel panel-default">
          <div class="panel-heading" id="lefthead"><strong>New Burgers</strong></div>
          <div class="panel-body">
            <ul>
              {{#each burgers}}
              {{#unless devoured}}
              <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
              <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
              <hr>
              {{/unless}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
      {{!-- Right Side for not yet devoured ones --}}
      <div class="col-sm-6">
        <div class="panel panel-default">
          <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
          <div class="panel-body">
            <ul>
              {{#each burgers}}
              {{#if devoured}}
              <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
              <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
              <hr>
              {{/if}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>